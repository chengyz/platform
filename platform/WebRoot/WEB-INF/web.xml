<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>platform</display-name>
  <filter>
    <filter-name>SparkFilter</filter-name>
    <filter-class>spark.servlet.SparkFilter</filter-class>
    <init-param>
      <param-name>applicationClass</param-name>
      <param-value>com.test.AppRoute</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>/sso/login</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>sessionFilter</filter-name>
    <filter-class>com.test.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/system/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/pc/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/hkdapp/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/ppinfoapp/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SparkFilter</filter-name>
    <url-pattern>/system/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SparkFilter</filter-name>
    <url-pattern>/pc/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SparkFilter</filter-name>
    <url-pattern>/front/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SparkFilter</filter-name>
    <url-pattern>/hkdapp/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SparkFilter</filter-name>
    <url-pattern>/ppinfoapp/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>front/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/error/error.jsp</location>
  </error-page>
  <display-name>AppPlatform</display-name>
</web-app>